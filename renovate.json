{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "group:all"],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "enabled": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "packageNames": ["chalk"],
      "enabled": false
    }
  ]
}
